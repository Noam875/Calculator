<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainCalc">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/display"
        android:layout_alignParentTop="true"
        android:textColor="#4480ff"
        android:textSize="@dimen/abc_text_size_display_2_material"
        android:maxLines="3"
        android:maxLength="14"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sqrt"
        android:id="@+id/sqrt_button"
        android:layout_below="@+id/display"
        android:layout_marginLeft="2dp"
         />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="()"
        android:id="@+id/sog"
        android:layout_below="@+id/display"

        android:layout_toRightOf="@+id/sqrt_button"
        android:layout_marginLeft="2dp"
        android:layout_toEndOf="@+id/sqrt_button" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:id="@+id/backButton"
        android:layout_alignBaseline="@id/sqrt_button"

        android:layout_alignTop="@+id/sqrt_button"
        android:layout_toRightOf="@+id/sog"
        android:layout_margin="2dp"
     />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLE"
        android:id="@+id/clearButton"
        android:layout_alignBaseline="@id/sqrt_button"

        android:layout_alignTop="@+id/sqrt_button"
        android:layout_toRightOf="@+id/backButton"
        android:layout_margin="2dp"
        />







    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/b1"

        android:layout_marginLeft="2dp"
        android:layout_below="@+id/sqrt_button"
        />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/b2"
        android:layout_below="@+id/sog"


        android:layout_toRightOf="@+id/b1"
        android:layout_marginLeft="2dp"
        android:layout_toEndOf="@+id/sqrt_button" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/b3"
        android:layout_alignBaseline="@id/b1"
        android:layout_below="@+id/backButton"
        android:layout_alignTop="@+id/sqrt_button"
        android:layout_toRightOf="@+id/b2"
        android:layout_margin="2dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/addButton"
        android:layout_alignBaseline="@id/b1"
        android:layout_below="@+id/backButton"
        android:layout_alignTop="@+id/sqrt_button"
        android:layout_toRightOf="@+id/b3"
        android:layout_margin="2dp"
        />








    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/b4"

        android:layout_marginLeft="2dp"
        android:layout_below="@+id/b1"
        />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/b5"
        android:layout_below="@+id/b2"


        android:layout_toRightOf="@+id/b1"
        android:layout_marginLeft="2dp"
        android:layout_toEndOf="@+id/b4" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/b6"
        android:layout_alignBaseline="@id/b4"
        android:layout_below="@+id/b3"
        android:layout_alignTop="@+id/sqrt_button"
        android:layout_toRightOf="@+id/b5"
        android:layout_margin="2dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUB"
        android:id="@+id/subButton"
        android:layout_alignBaseline="@id/b4"
        android:layout_below="@+id/backButton"
        android:layout_alignTop="@+id/sqrt_button"
        android:layout_toRightOf="@+id/b6"
        android:layout_margin="2dp"
        />












    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/b7"

        android:layout_marginLeft="2dp"
        android:layout_below="@+id/b4"
        />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/b8"
        android:layout_below="@+id/b5"


        android:layout_toRightOf="@+id/b1"
        android:layout_marginLeft="2dp"
        android:layout_toEndOf="@+id/b4" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/b9"
        android:layout_alignBaseline="@id/b7"
        android:layout_below="@+id/b3"
        android:layout_alignTop="@+id/sqrt_button"
        android:layout_toRightOf="@+id/b8"
        android:layout_margin="2dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MUL"
        android:id="@+id/mulButton"
        android:layout_alignBaseline="@id/b7"
        android:layout_below="@+id/subButton"
        android:layout_alignTop="@+id/sqrt_button"
        android:layout_toRightOf="@+id/b9"
        android:layout_margin="2dp"
        />






    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dot"
        android:id="@+id/dotButton"

        android:layout_marginLeft="2dp"
        android:layout_below="@+id/b7"
        />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/b0"
        android:layout_below="@+id/b8"


        android:layout_toRightOf="@+id/dotButton"
        android:layout_marginLeft="3dp"
        android:layout_toEndOf="@+id/b8" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="div"
        android:id="@+id/divButton"
        android:layout_alignBaseline="@id/dotButton"
        android:layout_below="@+id/b9"
        android:layout_alignTop="@+id/sqrt_button"
        android:layout_toRightOf="@+id/b8"
        android:layout_margin="2dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RES"
        android:id="@+id/resButton"
        android:layout_alignBaseline="@id/dotButton"
        android:layout_below="@+id/mulButton"
        android:layout_alignTop="@+id/sqrt_button"
        android:layout_toRightOf="@+id/divButton"
        android:layout_margin="2dp"
        />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageButton"
        android:src="@drawable/dog_2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
